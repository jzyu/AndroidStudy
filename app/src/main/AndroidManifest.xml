<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gofish.study" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.LauncherActivity"
            android:label="@string/title_activity_launcher" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.BaseAdapterLvActivity"
            android:label="BaseAdapterLvActivity" >
        </activity>
        <activity
            android:name=".activity.BaseAdapterHelperActivity"
            android:label="@string/title_activity_base_adapter_helper" >
        </activity>
        <activity
            android:name=".activity.TweenAnimActivity"
            android:label="@string/title_activity_tween_anim" >
        </activity>
        <activity
            android:name=".activity.TestServiceActivity"
            android:label="@string/title_activity_service_test" >
        </activity>

        <service
            android:name=".service.MyService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".activity.TestMessageHandlerActivity"
            android:label="@string/title_activity_test_message_handler" >
        </activity>
        <activity
            android:name=".activity.TestMessageHandler2Activity"
            android:label="@string/title_activity_test_message_handler2" >
        </activity>
        <activity
            android:name=".DynmicWidgetActivity"
            android:label="@string/title_activity_dynmic_widget" >
        </activity>
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
    </application>

</manifest>
